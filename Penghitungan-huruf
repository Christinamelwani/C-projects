#include <stdio.h>
#include <string.h>

int main(void)
{
    //Input: 
    char kalimat[100];
    int huruf[26] = {0};
    int count = 0;
    printf("Masukkan sebuah kalimat: ");
    scanf("%[^\n]s", kalimat);
    int c = strlen (kalimat);
    
    //Penghitungan huruf:
    for (int i = 0; i < c; i++)
    {
        if (kalimat[i] >= 'a' && kalimat[i] <= 'z')
        {
            huruf[kalimat[i] - 'a']++;
        }
        if (kalimat[i] >= 'A' && kalimat[i] <= 'Z')
        {
            huruf[kalimat[i] - 'A']++;
        }
    }
    for (int i = 0; i < 26; i++)
    {
        if (huruf[i] > 0)
        {
            count++;
        }
    }
    
    //Jumlah dan daftar huruf:
    printf("\n%d huruf unik:\n", count);
    for (int i = 0; i < 26; i++)
    {
        if (huruf[i] > 0)
            printf("%c = %d\n", i + 'a', huruf[i]);
    }
    
    //Ganjil/genap:
    if (count % 2 == 0)
        printf ("Genap\n");
    else
        printf ("Ganjil\n");
        
      
    return 0;
}
